{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).ready(function() {
            $(window).scroll(function() {
            if ($(this).scrollTop() > 1){  
                $('.portfolio-sticky-animated-nav').addClass("sticky");
                $('.portfolio-sticky-animated-button').addClass("sticky");
                $('.portfolio-social-roll-facebook').animate({left: "150px", top: "40px"}, 1);
                $('.portfolio-social-roll-in').animate({left: "150px", top: "40px"}, 1);
              }
              else{
                $('.portfolio-sticky-animated-nav').removeClass("sticky");
                $('.portfolio-sticky-animated-button').removeClass("sticky");
                $('.portfolio-social-roll-facebook').animate({left: "-=150px", top: "-=40px"}, 1);
                $('.portfolio-social-roll-in').animate({left: "-=150px", top: "-=40px"}, 1);
              }
            });
        });
    </script>
{% endblock %}