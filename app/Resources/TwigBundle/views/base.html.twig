<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap-theme.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
            
    <div class="portfolio-container">
        <div class="portfolio-sticky-animated-nav">
            <div class="portfolio-sticky-animated-inner">
                <nav>
                    <a href="{{path('homepage')}}"><div class="portfolio-sticky-animated-button">Home</div></a>
                    <a href="{{path('about')}}"><div class="portfolio-sticky-animated-button">O mnie</div></a>
                    <a href="{{path('portfolio')}}"><div class="portfolio-sticky-animated-button">Portfolio</div></a>
                    <a href="{{path('blog')}}"><div class="portfolio-sticky-animated-button">Blog</div></a>
                    <a href="{{path('contact')}}"><div class="portfolio-sticky-animated-button">Kontakt</div></a>
                    <a href="{{path('homepage')}}"><div class="portfolio-sticky-animated-button">Usługi</div></a>
                </nav>
                <div class="portfolio-sticky-animated-socials">
                    <a href="#"><div class="portfolio-social-roll-facebook"></div></a>
                    <a href="#"><div class="portfolio-social-roll-in"></div></a>
                </div>
            </div>
        </div>
        <div class="portfolio-top">
        </div>
        <div class="portfolio-main">
            {% block body %}{% endblock %}
        </div>
        <footer>Dominik Pakosz &copy; 2016 | <a href="mailto:czlowiek@czlowiek.pl">Masz pytanie lub sugestię?</a></footer>
    </div>
        {% block javascripts %}
        <script src="{{ asset('bower_components/jquery/dist/jquery.js') }}"></script>
        <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $(window).scroll(function() {
                if ($(this).scrollTop() > 1){  
                    $('.portfolio-sticky-animated-nav').addClass("sticky");
                    $('.portfolio-sticky-animated-button').addClass("sticky");
                    $('.portfolio-social-roll-facebook').animate({left: "140px", top: "40px"}, 1);
                    $('.portfolio-social-roll-in').animate({left: "140px", top: "40px"}, 1);
                  }
                  else{
                    $('.portfolio-sticky-animated-nav').removeClass("sticky");
                    $('.portfolio-sticky-animated-button').removeClass("sticky");
                    $('.portfolio-social-roll-facebook').animate({left: "0px", top: "0px"}, 1);
                    $('.portfolio-social-roll-in').animate({left: "0px", top: "0px"}, 1);
                  }
                });
            });
        </script>
        {% endblock %}
    </body>
</html>
